<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Les petites annonces{% endblock %}</title>
        {% block stylesheets %}
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css" integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous">
        <link rel="stylesheet" type="text/css" href="https://bootswatch.com/4/litera/bootstrap.min.css">
        <link rel="stylesheet" href="{{ asset('css/style.css') }}">
        {% endblock %}
    </head>
    <body>
            {% if is_granted('ROLE_PREVIOUS_ADMIN') %}
            <div class="alert alert-warning" style="margin-bottom: 0;">
                You are currently switched to this user.
                <a href="{{ path('homepage', {
                    '_switch_user': '_exit'
                    }) }}">Exit Impersonation</a>
            </div>
            {% endif %}


   
        {% block header %}
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" href="{{ path('list_adverts') }}">Les grosses annonces</a>
                        
               
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('list_adverts') }}">Annonces</a>
                        </li>

                        {% if is_granted('ROLE_ADMIN') %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('add_advert') }}">Créer une annonce</a>
                        </li>
                         {% endif %}

                         

                        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                         <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_account') }}">Mon compte</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_logout') }}">Se déconnecter</a>
                        </li>
                        
                        {% else %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_login') }}">Se connecter</a>
                        </li>
                                <li class="nav-item">
                            <a class="nav-link" href="{{ path('security_registration') }}">Inscription</a>
                        </li>
                        {% endif %}
                    </ul>
                    
             
        </nav>

         {% endblock %}

    <div class="container">
        {% block body %}

        {% endblock %}
    </div>




   
         
    <!-- Footer -->
        <footer class="page-footer font-small blue">
            {% block footer %}
            <!-- Copyright -->
                <div class="footer-copyright text-center py-3">© 2019 Copyright:
                    <a href="{{ path('list_adverts') }}"> annonces.com</a>
                </div>
            <!-- Copyright -->
            {% endblock %}
        </footer>
        <!-- Footer -->

        {% block javascript %}{% endblock %}
    </body>
</html>
